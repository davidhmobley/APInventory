<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="dialogTheme">@style/MyDialogStyle</item>
        <item name="android:buttonStyle">@style/MyBorderlessButtonStyle</item>
        <item name="android:alertDialogTheme">@style/MyAlertDialogTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MySplash_TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_xhuge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MySplash_VersionTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MySplash_CopyrightTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="My_Normal_TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_smallmedium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="My_Bold_TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_smallmedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyBorderlessButtonStyle" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/text_button_selector</item>
        <item name="android:textAppearance">@style/MyBorderlessButtonTextAppearance</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="MyBorderlessButtonTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_mediumlarge</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- ******************************* -->
    <!-- ********* ALERTDIALOG ********* -->
    <!-- ******************************* -->
    <style name="MyAlertDialogTheme"> <!-- parent="@android:style/Theme.Holo.Light.Dialog" -->
        <item name="android:windowIsFloating">true</item>
        <!--
        <item name="android:borderlessButtonStyle">@android:style/Widget.Holo.Light.Button.Borderless.Small</item>
        -->
        <item name="android:borderlessButtonStyle">@style/MyBorderlessButtonStyle</item>
        <item name="android:buttonBarStyle">@style/MyAlertDialogButtonBarStyle</item>
        <item name="android:buttonBarButtonStyle">@style/MyAlertDialogButtonBarButtonStyle</item>
        <item name="android:textAppearance">@style/MyAlertDialogTextAppearance</item>
        <item name="android:textAppearanceInverse">@style/MyAlertDialogTextAppearance</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:windowAnimationStyle">@style/MyDialogAnimations</item>
        <!--
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:listPreferredItemPaddingLeft">16dip</item>
        <item name="android:listPreferredItemPaddingRight">16dip</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/MyAlertDialogTitleStyle</item>
        -->
    </style>

    <style name="MyAlertDialogStyle"> <!-- parent="@android:style/Theme.Holo.Light.Dialog" -->
        <item name="android:fullDark">@color/yellow</item>
        <item name="android:topDark">@color/alert_dialog_title_bg_color</item>
        <item name="android:centerDark">@color/alert_dialog_title_bg_color</item>
        <item name="android:bottomDark">@color/yellow</item>
        <item name="android:fullBright">@color/yellow</item>
        <item name="android:topBright">@color/yellow</item>
        <item name="android:centerBright">@color/yellow</item>
        <item name="android:bottomBright">@color/alert_dialog_bg_color</item>
        <item name="android:bottomMedium">@color/yellow</item>
        <item name="android:centerMedium">@color/yellow</item>
    </style>

    <style name="MyAlertDialogTitleStyle">
        <item name="android:textAppearance">@style/MyAlertDialogTitleTextAppearance</item>
    </style>

    <style name="MyAlertDialogTitleTextAppearance">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/alert_dialog_title_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyAlertDialogTextAppearance">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/alert_dialog_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyAlertDialogButtonBarStyle"> <!-- @android:style/Holo.Light.ButtonBar.AlertDialog -->
        <item name="android:divider">@drawable/alertdialog_divider</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">beginning|middle|end</item>
        <item name="android:background">@color/alert_dialog_bg_color</item>
        <item name="android:paddingBottom">5dp</item>
        <!--
        <item name="android:paddingTop">@dimen/margin25</item>
        <item name="android:paddingLeft">@dimen/margin25</item>
        <item name="android:paddingRight">@dimen/margin25</item>
        -->
    </style>

    <style name="MyAlertDialogButtonBarButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_mediumlarge</item>
        <item name="android:background">@drawable/text_button_selector</item>
    </style>


    <!-- ************************** -->
    <!-- ********* DIALOG ********* -->
    <!-- ************************** -->
    <style name="MyDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:windowTitleStyle">@style/My_DialogTitleStyle</item>
        <item name="android:windowAnimationStyle">@style/MyDialogAnimations</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:buttonStyle">@style/MyBorderlessButtonStyle</item>
    </style>

    <style name="My_DialogTitleStyle">
        <item name="android:cacheColorHint">#000000</item>
        <item name="android:textAppearance">@style/My_DialogTitleTextAppearance</item>
    </style>

    <style name="My_DialogTitleTextAppearance">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyDialogAnimations">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>
